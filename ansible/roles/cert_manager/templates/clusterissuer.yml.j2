apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: {{ cert_manager_clusterissuer_name }}
spec:
  acme:
    email: {{ cert_manager_letsencrypt_email }}
    server: {{ cert_manager_letsencrypt_server }}
    privateKeySecretRef:
      name: {{ cert_manager_clusterissuer_name }}-private-key
    solvers:
      - dns01:
          cloudflare:
            apiTokenSecretRef:
              name: cloudflare-api-token-secret
              key: api-token
